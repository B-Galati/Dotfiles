[alias]
	st   = status
    co   = checkout
    c    = commit
	com  = commit -m
	coma = commit -a -m
	aa   = add --all
    fa   = fetch --all -p -v

	# log section
	l   = !git log | tig -FRSX
    ll  = log --color --all --format='%C(yellow)%h%Creset %cr %C(blue)%cn%Creset -%C(auto)%d%Creset %s'
    lg  = log --graph --oneline --abbrev-commit --color --decorate
    lga = log --graph --oneline --abbrev-commit --color --decorate --all

	# branch management
	bdelete = !git branch -D $(git branch | grep -v ^* | xargs)

	# alias management
	aliases = "!git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort"
	
	# diff
	da = difftool --cached -d

[color]
    ui   = true
	diff = true

[color "branch"]
	current = blue
	local   = yellow
	remote  = green

[color "status"]
	added     = green
	changed   = yellow
	untracked = red

[push]
    default = simple

[diff]
	tool = meld
	guitool = meld

[merge]
	tool = meld

[core]
	excludesfile = ~/.gitignore_global

[pull]
    rebase = preserve

[branch]
	autosetuprebase = never

[rerere]
    enabled = true

[include]
    path = ~/.gitconfig_private
    
