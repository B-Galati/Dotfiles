[alias]
	st = status
	co = commit
	com = commit -m
	coma = commit -a -m
	aa = add --all
        fa = fetch --all -p -v

	# log section
	lg = log --oneline --graph --abbrev-commit --decorate
	lga = log --graph --oneline --abbrev-commit --decorate --all

[color]
    	ui = auto

[push]
    	default = simple

[core]
	excludesfile = ~/.gitignore_global

[branch]
	autosetuprebase = always
