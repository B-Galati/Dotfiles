[alias]
	st   = status
    co   = checkout
    c    = commit
	com  = commit -m
	coma = commit -a -m
	aa   = add --all
    fa   = fetch --all -p -v

	# log section
	l   = !git log | tig -FRSX
	ll  = log --date=short --pretty=format:'%Cred%h%Creset%x09%Cgreen%cr%Creset%x09%C(cyan)%an%Creset %s%x09%C(yellow)%d%Creset'
	lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
	lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative --all

	# branch management
	bdelete = !git branch -D $(git branch | grep -v ^* | xargs)

	# alias management
	aliases = "!git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort"
	
	# diff
	da = difftool --cached -d

[color]
    ui   = true
	diff = true

[color "branch"]
	current = blue
	local   = yellow
	remote  = green

[color "status"]
	added     = green
	changed   = yellow
	untracked = red

[push]
    default = upstream

[diff]
	tool = meld
	guitool = meld

[merge]
	tool = meld

[core]
	excludesfile = ~/.gitignore_global

[pull]
    rebase = preserve

[branch]
	autosetuprebase = never

[rerere]
    enabled = true

[include]
    path = ~/.gitconfig_private
    
